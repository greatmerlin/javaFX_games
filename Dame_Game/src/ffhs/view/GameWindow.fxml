<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="parent" prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/"
            fx:controller="ffhs.controller.GameWindowController">
    <center>
        <VBox alignment="CENTER" fillWidth="false" BorderPane.alignment="CENTER">
            <children>
                <Pane fx:id="playingField" />
            </children>
        </VBox>
    </center>
    <left>
        <VBox alignment="TOP_CENTER" minWidth="131.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label id="nameOnTurn" fx:id="label_player1" text="Player 1" />
                <Pane fx:id="pane_player1" />
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets left="10.0" right="10.0" top="20.0" />
            </padding>
        </VBox>
    </left>
    <right>
        <VBox alignment="TOP_CENTER" minWidth="131.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label id="name" fx:id="label_player2" text="Player 2" />
                <Pane fx:id="pane_player2" />
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="20.0" />
            </padding>
        </VBox>
    </right>
    <top>
        <VBox alignment="TOP_CENTER" styleClass="background-bright" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <children>
                <Label id="status" fx:id="label_status">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </VBox>
    </top>
</BorderPane>
